@model Books.Front.Models.BookVm
@{
    ViewBag.Title = "Nuevo libro";
    var authors = ViewBag.Authors as List<SelectListItem>;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Nuevo libro</h2>
    <a class="btn btn-light" href="@Url.Action("Index")">Volver</a>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<div class="card shadow-sm">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row g-3">
                <div class="col-md-8">
                    @Html.LabelFor(m => m.Title, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-4">
                    @Html.LabelFor(m => m.Year, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Year, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(m => m.Year, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    @Html.LabelFor(m => m.Genre, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Genre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Genre, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(m => m.Pages, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Pages, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(m => m.Pages, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(m => m.AuthorId, new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.AuthorId, authors, "Seleccione un autor", new { @class = "form-select" })
                    @Html.ValidationMessageFor(m => m.AuthorId, "", new { @class = "text-danger" })
                </div>

                <div class="col-12 d-flex gap-2 mt-2">
                    <button class="btn btn-primary" type="submit">Guardar</button>
                    <a class="btn btn-light" href="@Url.Action("Index")">Cancelar</a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
